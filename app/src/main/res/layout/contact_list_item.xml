<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
<TextView
    android:id="@+id/textchart"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_20"
    android:background="#e3efef"
    android:text="A"
    android:textColor="#353535"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dp_15"
    android:textSize="@dimen/sp_14"
    android:visibility="gone"
    android:layout_marginRight="@dimen/dp_15"
    />
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_8"
        android:background="@drawable/list_item_press_bg_change"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10" >

        <RelativeLayout
            android:id="@+id/relativeLayout11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_contact_header"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_name_3"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />
            <com.y2w.uikit.customcontrols.imageview.HeadImageView
                android:id="@+id/img_contact_header"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relativeLayout11"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:maxWidth="@dimen/dp_180"
            android:singleLine="true"
            android:paddingLeft="@dimen/dp_10"
            android:text="标题"
            android:textColor="#101010"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

    <View
        android:id="@+id/viewline"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentLeft="true"
        android:background="@color/item_divider"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_65" />

</LinearLayout>