<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e3efef" >
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
      android:padding="@dimen/dp_15"
      android:layout_marginTop="@dimen/dp_10"
      android:background="@color/white"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/relativeLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_contact_header"
            android:layout_width="@dimen/avatar_size_default"
            android:layout_height="@dimen/avatar_size_default"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_name_6"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/sp_18" />
        <com.y2w.uikit.customcontrols.imageview.HeadImageView
            android:id="@+id/head_image"
            android:layout_width="@dimen/avatar_size_default"
            android:layout_height="@dimen/avatar_size_default"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/head_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#353535"
            android:textSize="@dimen/sp_18"/>

        <TextView
            android:id="@+id/head_detail_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_150"
            android:paddingLeft="@dimen/isetting_item_padding_left"
            android:paddingRight="@dimen/isetting_item_padding_right"
            >
            <Button
                android:id="@+id/bt_contactInfo_chat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/nim_message_button_bottom_send_selector"
                android:text="@string/chat"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/bt_contactInfo_delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/nim_red_round_button_selector"
                android:text="@string/add_friend"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

</RelativeLayout>