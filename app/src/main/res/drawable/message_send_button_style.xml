<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" android:drawable="@drawable/message_send_pressed">
		<shape>
			<solid android:color="#cccccc"></solid>
			<corners android:radius="6dp" />
			
		</shape>
	</item>
 
	<item android:state_focused="true">
		<shape>
		    <solid android:color="#cccccc"></solid>
			<corners android:radius="6dp" />
			
		</shape>
	</item>
	
	<item android:state_selected="true">
		<shape>
		    <solid android:color="#3fc4ff"></solid>
			<corners android:radius="6dp" />
		</shape>
	</item>
	
	<item android:state_enabled="false" android:drawable="@drawable/message_add_normal">
		<shape>
		    <stroke android:width="1px" android:color="#c3c3c3" />
		    <gradient android:startColor="#ffffff" android:endColor="#e5e5e5"
				android:angle="270" />
			<corners android:radius="6dp" />
		</shape>
	</item>
 
	<item android:state_enabled="true" android:drawable="@drawable/message_send_normal">
		<shape>
		    <stroke android:width="2px" android:color="#49c0f8" />
		    <gradient android:startColor="#ffffff" android:endColor="#e5e5e5"
				android:angle="270" />
			<corners android:radius="6dp" />
		</shape>
	</item>
</selector>
